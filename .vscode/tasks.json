{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-I.",
                "`root-config --cflags`",
                "-o",
                "${fileDirname}/main",
                "*.cc",
                "`root-config --libs`"
